{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@data": ["data"],
      "@data/*": ["data/*"],
      "@models": ["models"],
      "@models/*": ["models/*"],
      "@src": ["src"],
      "@src/*": ["src/*"],
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}